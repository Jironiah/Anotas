<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Borde -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background"/> <!-- Color del borde -->
            <corners android:radius="15dp"/> <!-- Esquinas redondeadas -->
        </shape>
    </item>

    <!-- Fondo -->
    <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> <!-- Color de fondo -->
            <corners android:radius="15dp"/> <!-- Un poco menos de radio para que el borde se vea -->
        </shape>
    </item>
</layer-list>
